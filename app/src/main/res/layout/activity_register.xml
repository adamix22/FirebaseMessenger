<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".RegisterActivity"
                                             android:background="@android:color/holo_blue_light"
>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/username_register"
            android:hint="Username"
            android:background="@drawable/rounded_corners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/select_photo" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/email_register"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/username_register" android:background="@drawable/rounded_corners"
            android:hint="email"
            app:layout_constraintEnd_toEndOf="@+id/username_register"
            app:layout_constraintStart_toStartOf="@+id/username_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/password_register"
            android:hint="Password" android:background="@drawable/rounded_corners" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/email_register"
            app:layout_constraintEnd_toEndOf="@+id/email_register"
            app:layout_constraintStart_toStartOf="@+id/email_register"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_buttons"
            android:id="@+id/register_button"
            app:layout_constraintStart_toStartOf="@+id/password_register"
            app:layout_constraintEnd_toEndOf="@+id/password_register" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_register" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Already have an account?"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="50sp"
            android:id="@+id/already_have_an_account" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button"
            app:layout_constraintEnd_toEndOf="@+id/register_button"
            app:layout_constraintStart_toStartOf="@+id/register_button" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Select a photo"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="150sp"
            android:background="@drawable/rounded_pic"
            android:layout_height="150sp"
            android:id="@+id/select_photo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/username_register" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150sp"
            app:civ_border_width="4sp"
            android:layout_height="150sp"
            app:layout_constraintEnd_toEndOf="@+id/select_photo"
            app:layout_constraintBottom_toBottomOf="@+id/select_photo"
            app:layout_constraintStart_toStartOf="@+id/select_photo"
            app:layout_constraintTop_toTopOf="@+id/select_photo" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/circular_image"/>
</android.support.constraint.ConstraintLayout>