<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".loginActivity" android:background="@android:color/holo_blue_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/email_login" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/rounded_corners"
            android:hint="Email" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:paddingLeft="15dp"
            android:layout_height="50sp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login"
            app:layout_constraintStart_toStartOf="@+id/email_login"
            app:layout_constraintEnd_toEndOf="@+id/email_login" android:hint="password"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login"/>
    <Button
            android:text="Log in"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:id="@+id/login_button"
            android:background="@drawable/rounded_buttons"
            app:layout_constraintEnd_toEndOf="@+id/password_login"
            app:layout_constraintStart_toStartOf="@+id/password_login" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_login"/>
    <TextView
            android:text="Don' have an account? Register"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="50sp"
            android:id="@+id/back_to_register" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="@+id/login_button"
            app:layout_constraintEnd_toEndOf="@+id/login_button" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>